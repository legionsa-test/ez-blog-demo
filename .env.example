# ========================================
# ezBlog Environment Variables
# ========================================
# Copy this file to .env.local and fill in your values

# ----------------------------------------
# Notion Integration (Required)
# ----------------------------------------
NEXT_PUBLIC_NOTION_PAGE_URL=https://your-notion-page-url.notion.so/

# ----------------------------------------
# Site Configuration
# ----------------------------------------
NEXT_PUBLIC_SITE_TITLE=My Blog
NEXT_PUBLIC_SITE_DESCRIPTION=A personal blog powered by ezBlog
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# ----------------------------------------
# Author Information
# ----------------------------------------
NEXT_PUBLIC_AUTHOR_NAME=Your Name
NEXT_PUBLIC_AUTHOR_BIO=Blog author and creator
NEXT_PUBLIC_AUTHOR_AVATAR=/avatar.svg

# ----------------------------------------
# Comments (Giscus - Optional)
# ----------------------------------------
# Get these values from https://giscus.app
# 1. Enter your GitHub repo URL
# 2. Enable Discussions on your repo
# 3. Copy the generated values below

NEXT_PUBLIC_GISCUS_REPO=username/repo-name
NEXT_PUBLIC_GISCUS_REPO_ID=R_...
NEXT_PUBLIC_GISCUS_CATEGORY=Announcements
NEXT_PUBLIC_GISCUS_CATEGORY_ID=DIC_...

# ----------------------------------------
# Theme (Optional)
# ----------------------------------------
# Available themes: ezblog1 (default)
NEXT_PUBLIC_THEME=ezblog1

# ----------------------------------------
# Admin Security (SERVER-SIDE ONLY)
# ----------------------------------------
# ⚠️ CRITICAL: This is a SERVER-SIDE variable (no NEXT_PUBLIC_ prefix)
# It is NEVER exposed to browsers. Change immediately for production!
ADMIN_PASSWORD=admin123

